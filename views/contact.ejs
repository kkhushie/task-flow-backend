<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/styles.css">
    <title>Taskflow</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>
</head>

<body>

    <div class="main w-full min-h-screen bg-zinc-900">

        <nav class=" flex items-center py-5 px-16 justify-between border-b border-zinc-600 text-white mx-5">
            <h1 class="text-3xl">Task<span class="font-[poppins] font-semibold text-violet-600">Flow</span>ðŸ˜‰</h1>
            <ul class="flex gap-5">
                <li><a href="/">Home</a></li>
                <li><a href="">Contact</a></li>
                <li><a href="/signup" class=" bg-violet-600 text-black px-3 py-1 rounded-md">signup</a></li>

            </ul>
        </nav>
        <div class="p-10 flex justify-center">
            <div class="bg-white p-8 rounded-lg shadow-md w-96">
                <h1 class="text-3xl font-extrabold text-gray-800 mb-6">Get in Touch</h1>
        
        
        <form action="" method="post" class="space-y-4">
                    <div>
                        <label for="name" class="text-sm font-medium text-gray-600">Your Name</label>
                        <input type="text" id="name" name="name" class="mt-1 p-2 w-full border-2 border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
                    </div>
        
                    <div>
                        <label for="email" class="text-sm font-medium text-gray-600">Your Email</label>
                        <input type="email" id="email" name="email" class="mt-1 p-2 w-full border-2 border-gray-300 rounded-md focus:outline-none focus:border-indigo-500">
                    </div>
        
                    <div>
                        <label for="message" class="text-sm font-medium text-gray-600">Message</label>
                        <textarea id="message" name="message" rows="4" class="mt-1 p-2 w-full border-2 border-gray-300 rounded-md focus:outline-none focus:border-indigo-500"></textarea>
                    </div>
        
                    <button type="submit" class="bg-violet-600 text-white p-2 rounded-md hover:opacity-90 focus:outline-none focus:ring focus:border-indigo-500">Send Message</button>
                </form>
             
            </div>
        </div>
    </div>
    <script src="javascripts/script.js"></script>
</body>

</html>